<%if(list.length==0){%>
    <p class="err_info">抱歉，该分类下还没有内容，赶快去添加吧！！</p>
<%}else{%>
<div id="tab5" class="tabm">
    <p class="g_font">我的关注</p>
    <div class="g_wrap" id="w5">
        <%for (let i=0;i<list.length;i++){ %>
        <div class='eve_list'>
            <img class='eve_pic' src='images/tou1.png'>
            <div class='eve_articel'>
                <h4><%=list[i].name%></h4>
            </div>
            <div class='eve_concern'>
                <img src='images/concern.png'>
                <span id="spn" data-id="<%=userinfo%>" style="display: none"></span>
                <button onclick="cancelConcent(this)" class='eve_btn cel_btn'>取消关注</button>
            </div>
        </div>
        <%}%> 
    </div>
    <!--分页标签-->
    <div class="split_page">
        <span><</span>
        <span class="active">1</span>
        <span>2</span>
        <span>></span>
    </div>
</div>
<%}%>
<script>
    function cancel_Concent(that){
        var _this = that;
        var id = $('#spn').attr('data-id');
        var data = {
            id
        }
        $.ajax({
            url:'/owner/cancel',
            type:'post',
            data: data,
            success:function(data){
                console.log(data);
                $(_this).html(data)  //改变值
            }
        })
    }
</script>



